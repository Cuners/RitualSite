@model IEnumerable<RitualServer.Model.Tape>
@{
    ViewBag.Title = "Траурные ленты";
}

<style>
    .category-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding-left: 80px;
        padding-right: 80px;
    }

    .category {
        width: 400px;
        margin: 10px;
        border: 1px solid #ccc;
        padding: 10px;
        text-align: center;
    }

    .category-image {
        max-width: 390px;
        max-height: 200px;
        margin-bottom: 10px; /* Отступ снизу изображения */
    }

    .category-name {
        font-weight: bold;
    }

    .separator {
        border-top: 1px solid #ccc;
        margin-top: 10px; /* Отступ сверху для разделителя */
    }

    .category-link {
        text-decoration: none;
        color: #333;
    }

        .category-link:hover .category {
            background-color: #f0f0f0; /* Цвет фона при наведении на категорию */
            color: #333;
        }
</style>

<div class="category-container">
    @foreach (var category in Model)
    {
        <a class="category-link" asp-action="InfoTape" asp-controller="Home" asp-route-id="@category.TapeId">
            <div class="category">
                @if (category.Image != null && category.Image.Length > 0)
                {
                    <img class="category-image" src="data:image;base64,@Convert.ToBase64String(category.Image)" alt="Изображение" />
                }
                else
                {
                    <span>Нет изображения</span>
                }
                <div class="separator"></div>
                <div class="category-name">@category.Product.Name</div>
            </div>
        </a>

    }
</div>
